{
  "name": "tacto",
  "version": "1.0.1",
  "description": "A convenient Javascript sorting library.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json --coverage",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brian-dlee/tacto.git"
  },
  "keywords": [
    "nodejs",
    "javascript",
    "sort"
  ],
  "author": "Brian Lee <briandl92391@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/brian-dlee/tacto/issues"
  },
  "files": [
    "lib/**/*"
  ],
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "homepage": "https://github.com/brian-dlee/tacto#readme",
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "jest": "^24.9.0",
    "kind-of": "^6.0.3",
    "minimist": "^1.2.5",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.2"
  }
}
